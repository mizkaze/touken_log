<div class="row">
  <div class="container">

    <div class="mx-auto">
      <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f|  %>
      <table class="table">
        <tr>
          <th>題名</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>本文</th>
          <td><%= f.text_area :body %></td>
        </tr>
      </table>

      <div>
        <%= f.file_field :images, accept: "image/*", multiple: true %>
      </div>

      <div>
        <% if @post.images.attached? %>
        <p>削除する画像をチェックして下さい</p>
        <div style="display: flex; flex-wrap: wrap; width: 750px;">
          <% @post.images.each do |image| %>
          <div style="display: flex; margin:5px 5px 5px 0;">
            <div class="d-flex align-items-start">
              <%= f.check_box :image_ids, { multiple: true }, image.id, false %>
            </div>
            <label for="post_image_ids_<%= image.id %>">
              <%= image_tag image, width: 200, height: 'auto' %>
            </label>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>

      <div>
        <%= f.submit "更新" %>
      </div>

      <% end %>
    </div>

  </div>
</div>
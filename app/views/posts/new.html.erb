<div class="container">
  <div class="row">

    <div class="mx-auto">
      <%= form_with model: @post, url: posts_path, method: :post do |f| %>
      <table class="table">
        <tr>
          <th>題名</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>本文</th>
          <td><%= f.text_area :body %></td>
        </tr>
      </table>

      <div>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div>
        <%= f.submit "投稿" %>
      </div>

    <% end %>
    </div>

  </div>
</div>
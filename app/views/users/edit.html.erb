<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<div class="container">
  <div class="row">
    <div>
      <%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>
        <% if current_user.nil? %>
        <% elsif current_user.kind == "member" %>
          <%= f.file_field :image, accept: "image/*" %>
          <table>
            <tr>
              <th>ユーザーネーム</th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th>紹介文</th>
              <td><%= f.text_area :introduction %></td>
            </tr>
          </table>

        <% elsif current_user.kind == "guest" %>
          <h4>《ゲストの方専用》本登録画面</h4>
          <table class="table table-borderless">
            <tr>
              <th>ユーザーネーム</th>
              <td><%= f.text_field :name, value: nil %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email, value: nil %></td>
            </tr>
            <tr>
              <th>パスワード</th>
              <td><%= f.password_field :password %></td>
              <td><%= f.password_field :password_confirmation %></td>
            </tr>
            <%= f.hidden_field :kind, value: "member" %>
            <tr>
              <th><%= f.submit '登録' %></th>
              <tr></tr>
            </tr>
          </table>
        <% else %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

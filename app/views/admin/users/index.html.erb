<div class="container">
  <div class="row">

    <div class="mx-auto">
      <h3>利用者一覧</h3>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th>id</th>
              <th>名前</th>
              <th>有効/無効</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <th><%= user.id %></th>
              <th><%= link_to user.name, admin_user_path(user.id) %></th>
              <th>
                <% if user.is_active == true %>
                  <span>有効</span>
                <% else %>
                  <span>無効</span>
                <% end %>
              </th>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>